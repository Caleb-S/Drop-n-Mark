{
  "manifest_version": 3,
  "name": "DropNMark",
  "version": "0.1.2",
  "description": "Bookmark Extension",
  "permissions": ["activeTab", "bookmarks"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
   {
      "matches": ["<all_urls>"],
      "js": [
        "content.js", 
        "components/toast.js",
        "components/floatingBtn.js",
        "components/bookmarkMenu.js"],
      "css": ["style.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css", 
        "bookmarkmenu.html", 
        "content.js", 
        "assets/newFolderLarge.svg", 
        "assets/newFolderMedium.svg",
        "assets/newFolderXLarge.svg",
        "assets/rubbishBinSmall.svg",
        "components/toast.js",
        "components/floatingBtn.js",
        "components/bookmarkMenu.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
