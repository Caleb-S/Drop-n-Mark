{
  "manifest_version": 3,
  "name": "DropNMark",
  "version": "0.1.2",
  "description": "Bookmark Extension",
  "permissions": ["activeTab", "bookmarks"],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "32": "src/assets/icon32.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
   {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/html/styles/style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/html/styles/style.css", 
        "src/html/bookmarkmenu.html", 
        "src/content.js", 
        "src/assets/newFolderLarge.svg", 
        "src/assets/newFolderMedium.svg",
        "src/assets/newFolderXLarge.svg",
        "src/assets/rubbishBinSmall.svg",
        "src/components/dist/floatingBtn.js",
        "src/components/dist/bookmarkMenu.js",
        "src/components/dist/toast.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
