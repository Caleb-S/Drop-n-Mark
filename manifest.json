{
  "manifest_version": 3,
  "name": "ezbookmark",
  "version": "0.0.0.1",
  "description": "Bookmark Extension",
  "permissions": ["activeTab", "bookmarks"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
   {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css", 
        "bookmarkmenu.html", 
        "content.js", 
        "assets/newFolderLarge.svg", 
        "assets/newFolderMedium.svg",
        "assets/newFolderXLarge.svg",
        "assets/rubbishBinSmall.svg",
        "toast.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
